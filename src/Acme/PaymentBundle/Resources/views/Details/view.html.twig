{% extends "AcmePaymentBundle::layout.html.twig" %}

{% block title %}
    {{ paymentTitle }} - Details View"
{% endblock %}

{% block content %}
    <div class="block">
        Status: {{ status }}
        {% if refundToken %}
            <a href="{{ refundToken.targetUrl }}">Refund</a>
        {% endif %}
    </div>

    <div class="block">
        <pre style="white-space: pre;">{{ details|json_encode(constant('JSON_PRETTY_PRINT'))|raw }}</pre>
    </div>
{% endblock %}

{% set code = code(_self) %}