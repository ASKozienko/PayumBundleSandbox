{% extends "AcmePaymentBundle::layout.html.twig" %}

{% block title %}
    {{ paymentTitle }} - Details View"
{% endblock %}

{% block content %}
    <div class="block">
        Status: {{ status }}
    </div>

    <div class="block">
        <ul>
            {% for key, value in details %}
                <li>{{ key }}: {{ value|json_encode(constant('JSON_PRETTY_PRINT'))|raw }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% set code = code(_self) %}